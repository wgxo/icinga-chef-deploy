#!/bin/bash

function header {
    CH='-'
    if [ ! -z "$2" ]; then CH="$2"; fi
    echo -e "\e[92m"
    head -c `tput cols` /dev/zero | tr '\0' $CH
    echo -e "\e[96m\n$1\e[92m"
    head -c `tput cols` /dev/zero | tr '\0' $CH
    echo -e "\e[0m"
}

header "Building MySQL Docker Container"

/usr/bin/docker build -t mysql .

header "Build complete" '='
